@{
    ViewData["Title"] = "Реестр кинофильмов";
    WebGrid grid = new WebGrid(HttpContextAccessor, source: ViewData["TableData"] as IEnumerable<CountryViewModel>,
         defaultSort: "TableName",
         rowsPerPage: 30);
}
@model CountryViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<div class="container">
    <div class="main_container">

        <form class="column_add" asp-controller="Dictionary" asp-action="AddOrUpdateCountries" method="post">
            <div class="text1">Добавление данных</div>
            @if (Model != null)
            {
                <input type="text" name="Name" required placeholder="Страна" asp-for="Name"
                       value=@Model.Name
                       class="input">
            }
            else
            {
                <input type="text" name="Name" required placeholder="Страна" asp-for="Name" class="input">
            }


            <button class="btn" type="submit">Окей</button>

        </form>

        <div class="column_see">
            <div class="text1">@ViewData["TableName"]</div>
            <form class="container_table" action="/" method="post">
                <table class="table">
                    <tr class="row">
                        @foreach (var item in (ViewData["Headers"]) as string[])
                        {
                            <td class="col" style="background:#eee;">@item</td>
}
                    </tr>
                    @if (ViewData["TableData"] != null)
                    {
                        @foreach (var item in (ViewData["TableData"]) as IEnumerable<CountryViewModel>)
                        {
                            <div class="container_btn">
                                <button class="btn_change">Редактировать</button>
                                <button class="btn_change">Удалить</button>
                            </div>
                            <tr class="row">
                                <td class="col" contenteditable="true">@item.Name</td>
                            </tr>
}
                    }

                </table>
                </form>
            </div>

        </div>
</div>
