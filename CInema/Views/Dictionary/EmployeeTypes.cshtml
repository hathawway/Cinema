@{ ViewData["Title"] = "Реестр кинофильмов"; }
@model TypeEmployeeViewModel


<div class="container">
    <div class="main_container">

        <form class="column_add" asp-controller="Dictionary" asp-action="AddOrUpdateEmployeeTypes" method="post">
            <div class="text1">Добавление данных</div>

            <input asp-for="Id" value="@Model.Id" type="hidden">
            <input type="text" name="Name" required placeholder="Должность" asp-for="Name" class="input"
                   value=@Model.Name>

            <button class="btn" type="submit">Окей</button>

        </form>

        <div class="column_see">
            <div class="text1" style="margin-bottom:10px;">@ViewData["TableName"]</div>

                <table class="table">
                    <tr class="row">
                        @foreach (var item in (ViewData["Headers"]) as string[])
                        {
                            <td class="col" style="background:#eee;">@item</td>
                        }
                    </tr>
                    @if (ViewData["TableData"] != null)
                    {
                        @foreach (var item in (ViewData["TableData"]) as IEnumerable<TypeEmployeeViewModel>)
                        {
                        <tr class="row">
                            <td class="col" style="width:130px">
                                <div class="container_btn">
                                    <button class="btn_change">
                                        <a style="color:#000; text-decoration:none" href="/Dictionary/EmployeeTypes?id=@item.Id">Редактировать</button>
                                    @using (Html.BeginForm("DeleteEmployeeType", "Dictionary", new { id = item.Id }, FormMethod.Post))
                                    {
                                        <button class="btn_change" type="submit">Удалить</button>
                                    }
                                </div>
                            </td>

                            <td class="col" contenteditable="true">@item.Name</td>

                        </tr>
                        }
                    }

                </table>
        </div>

    </div>
</div>
