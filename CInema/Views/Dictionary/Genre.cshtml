@{ ViewData["Title"] = "Реестр кинофильмов"; }
@model GenreViewModel

<div class="container">
    <div class="main_container">

        <form class="column_add" asp-controller="Dictionary" asp-action="AddOrUpdateGenre" method="post">
            <div class="text1">Добавление данных</div>

            <input asp-for="Id" value="@Model.Id" type="hidden">
            <input type="text" name="Name" required placeholder="Жанр" asp-for="Name" class="input" value=@Model.Name>

            <button class="btn" type="submit">Окей</button>

        </form>

        <div class="column_see">
            <div class="text1" style="margin-bottom:10px;">@ViewData["TableName"]</div>

            <form class="container_table" action="/" method="post">
                <table class="table">
                    <tr class="row">
                        @foreach (var item in (ViewData["Headers"]) as string[])
                        {
                            <td class="col" style="background:#eee;">@item</td>
                        }
                    </tr>
                    @if (ViewData["TableData"] != null)
                    {
                        @foreach (var item in (ViewData["TableData"]) as IEnumerable<GenreViewModel>)
                        {
                            <tr class="row">
                                <td class="col" style="width:130px">
                                    <div class="container_btn">

                                        @using (Html.BeginForm("Genre", "Dictionary", new { id = item.Id }, FormMethod.Get))
                                        {
                                            <button class="btn_change" type="submit">Редактировать</button>
                                        }

                                        <!--<button class="btn_change" type="submit">
        <a style="color:#000; text-decoration:none" href="/Dictionary/Genre?id=">Редактировать
    </button>-->

                                        @using (Html.BeginForm("DeleteGenre", "Dictionary", new { id = item.Id }, FormMethod.Post))
                                        {
                                            <button class="btn_change" type="submit">Удалить</button>
                                        }
                                    </div>
                                </td>

                                <td class="col" contenteditable="true">@item.Name</td>

                            </tr>
                        }
                    }

                </table>
            </form>
        </div>

    </div>
</div>
