@{ ViewData["Title"] = "Реестр кинофильмов"; }
@model DateFromTo

<div class="container">
    <div class="main_container">

        <form class="column_add" asp-controller="Query" asp-action="PotentiaGet" method="get">
            <input type="date"
                   asp-for="From" placeholder="Дата начала" class="input">
            <input type="date"
                   asp-for="To" placeholder="Дата окончания" class="input">

            <button class="btn" type="submit">Показать</button>
        </form>

        <div class="column_see" style="width:100%">
            <div class="text1" style="margin-bottom:10px;">@ViewData["TableName"]</div>
            
            <div class="container_table">
                <table class="table">

                        @if (ViewData["fact"] != null)
                        {
                        <tr class="row">
                            @foreach (var item in (ViewData["Headers"]) as string[])
                            {
                                <td class="col" style="background:#eee;">@item</td>
                            }
                        </tr>
                        }

                        
                        @if (ViewData["fact"] != null)
                        {

                            <tr class="row">
                                <td class="col">@ViewData["fact"]</td>
                                <td class="col">@ViewData["potent"]</td>
                            </tr>

                        }

                    </table>
            </div>
        </div>

    </div>
</div>
