@{ ViewData["Title"] = "Реестр кинофильмов"; }
@model UserViewModel


<div class="container">
    <div class="main_container">

        <form class="column_add" action="/" method="post">
            <div class="text1">Добавление данных</div>

            <input type="text" name="Login" required placeholder="Логин" class="input">

            <input type="text" name="Password" required placeholder="Пароль" class="input">

            <select class="select" asp-for="Role" type="text" title="Role">
                {
                @foreach (var item in (ViewData["TableData"]) as IEnumerable<UserViewModel>)
                {
                    <option value=@item.Login>@item.Login</option>
                }

                }
            </select>

            <button class="btn" type="submit">Окей</button>

        </form>

        <div class="column_see">
            <div class="text1">@ViewData["TableName"]</div>
            <form class="container_table" action="/" method="post">
                <table class="table">
                    <tr class="row">
                        @foreach (var item in (ViewData["Headers"]) as string[])
                        {
                            <td class="col" style="background:#eee;">@item</td>
                        }
                    </tr>
                    @if (ViewData["TableData"] != null)
                    {
                        @foreach (var item in (ViewData["TableData"]) as UserViewModel[])
                        {
                            <tr class="row">
                                    <td class="col" style="width:130px">
                                        <div class="container_btn">
                                        <button class="btn_change">Редактировать</button>
                                        <button class="btn_change">Удалить</button>
                                    </div>
                                </td>
                                <td class="col" contenteditable="true">@item.Login</td>
                                <td class="col" contenteditable="true">@item.Password</td>
                                <td class="col" contenteditable="true">@item.Role</td>
                            </tr>
                        }
                    }

                </table>
            </form>
        </div>

    </div>
</div>
