@model LoginViewModel

@{ ViewData["Title"] = "Авторизация"; }

<div class="intro">
    <div class="container">

        <form class="account_container" asp-controller="User" asp-action="Login" method="post">

            <div class="text1">Авторизация</div>

            <input name="Login" required placeholder="Имя пользователя" asp-for="Login" class="input">

            <div class="span"><span style="font-size:15px; margin-left:20px; margin-top:20px; font-weight:700;" asp-validation-for="Login"></span></div>

            <input type="password" name="Password" required placeholder="Пароль" asp-for="Password" class="input">

            <div class="span"><span style="font-size:15px; margin-left:20px; margin-top:20px; font-weight:700;" asp-validation-for="Password"></span></div>

            <button class="btn" type="submit" style="margin-bottom:15px">Войти</button>

            @if (ViewData["ERROR"] != null)
            {
                
                <div class="span"><span style="font-size:12px; margin-left:10px; margin-top:10px; font-weight:700;">@ViewData["ERROR"]</span></div>

            }


        </form>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
